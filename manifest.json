{
  "manifest_version": 2,
  "name": "DotRip",
  "version": "4.6.8",
  "description": "An extension for checking if .git is exposed in visited websites",
  "icons": {
    "32":"icons/dotrip-32.png",
    "64":"icons/dotrip-64.png",
    "512": "icons/dotrip-512.png"
  },
  "permissions": [
    "*://*/*",
    "webRequest",
    "storage",
    "notifications",
    "downloads"
  ],
  "background": {
    "scripts": [
      "dotgit.js",
      "lib/pako_inflate.min.js",
      "lib/jszip.min.js"
    ]
  },
  "browser_action": {
    "default_title": "DotRip",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html"
  }
}