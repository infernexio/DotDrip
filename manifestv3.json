{
  "manifest_version": 3,
  "name": "DotRip",
  "version": "4.6.7",
  "description": "An extension for checking if .git is exposed in visited websites",
  "icons": {
    "64":"icons/dotrip-64.png",
    "32":"icons/dotgit-32.png"
  },
  "permissions": [
    "webRequest",
    "storage",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "ws://*/*",
    "wss://*/*"
  ],
  "background": {
    "service_worker": "dotgit.js"
  },
  "action": {
    "default_title": "DotRip",
    "default_popup": "popup/popup.html"
  },
  "options_ui": {
    "page": "options/options.html"
  }
}